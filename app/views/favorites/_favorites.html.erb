<ul class="media-list">
  <% favorites.each do |favorite| %>
    <li class="media">
      <div class="media-body">
        <div>
          <% #binding.pry %>
          <%= link_to favorite.micropost.user.name, user_path(favorite.user) %> <span class="text-muted">posted at <%= favorite.micropost.created_at %></span>
        </div>
        <div>
          <p><%= favorite.micropost.content %></p>
        </div>
        <div>
          <%= render 'favorites/favorites_button', micropost: favorite.micropost %>
        </div>
        <div>
          <% if current_user == favorite.micropost.user %>
            <%= link_to "Delete", favorite.micropost, method: :delete, data: { confirm: "You sure?" }, class: 'btn btn-danger btn-xs' %>
          <% end %>
        </div>
      </div>
    </li>
  <% end %>
  <%= paginate favorites %>
</ul>